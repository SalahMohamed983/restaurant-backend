{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ResturantDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Jwt": {
    "Key": "YOUR_JWT_SECRET_KEY_HERE",
    "Issuer": "ResturantAPI",
    "Audience": "ResturantAPI",
    "ExpirationMinutes": "60",
    "RefreshTokenExpirationDays": "7"
  },
  "OAuth": {
    "Google": {
      "ClientId": "YOUR_GOOGLE_CLIENT_ID_HERE",
      "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET_HERE"
    }
  },
  "Email": {
    "BaseUrl": "https://localhost:5001",
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": "587",
      "User": "YOUR_EMAIL_HERE",
      "Password": "YOUR_EMAIL_APP_PASSWORD_HERE",
      "FromEmail": "YOUR_EMAIL_HERE",
      "FromName": "Resturant Web",
      "EnableSsl": "true"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
